
@{
    ViewData["Title"] = "Login";
}
@using BehdadNematiFinalWebProject.Models.ViewModels;
@model LoginViewModel;
<h1>Login</h1>

<div class="container offset-md-4 col-md-4">
    <form asp-action="LoginConfirm" asp-controller="Account">
        <div class="form-group">
            <input class="form-control" asp-for="UserName" placeholder="Username"/>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="Password" placeholder="Password" type="password"/>
        </div>
        <div class="form-group">
            <input class="form-check" asp-for="RememberMe" value="1"/>
            <label>Remeber me</label>
        </div>
        <button class="btn btn-success">Login</button>
    </form>
    <a class="btn btn-info" asp-action="GoogleLogin"asp-controller="account">Login with google</a>
</div> 