
@{
    ViewData["Title"] = "insert";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
@{
    ViewData["Title"] = "insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>insert</h1>
@using BehdadNematiFinalWebProject.Models.viewModels
@model productViewModels

<div class="container">
    <form asp-action="insertComfirm" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="EnglishName"></label>
            <input class="form-control" asp-for="EnglishName" />
            <span asp-validation-for="EnglishName"></span>
        </div>
        <div class="form-group">
            <label asp-for="price"></label>
            <input class="form-control" asp-for="price" />
            <span asp-validation-for="price"></span>
        </div>
        <div class="form-group">
            <label asp-for="count"></label>
            <input class="form-control" asp-for="count" />
            <span asp-validation-for="count"></span>
        </div>
        <div class="form-group">
            <label asp-for="brand_Id"></label>
            <select class="form-control" asp-for="brand_Id">
                @foreach (var item in ViewData["Brand"] as List<brand>)
                {
                    <option value="@item.Id">@item.name</option>
                }
            </select>
            <span asp-validation-for="brand_Id"></span>
        </div>
        <div class="form-group">
            <label asp-for="productType_Id"></label>
            <select class="form-control" asp-for="productType_Id">
                @foreach (var item in ViewData["productType"] as List<ProductType>)
                {
                    <option value="@item.Id">@item.name</option>
                }
            </select>
            <span asp-validation-for="productType_Id"></span>
        </div>
        <div class="custom-file" id="img">
            <input id="fileimg" type="file" class="custom-file-input" name="img" />
            <label id="lblimg" class="custom-file-label">Choose product image...</label>
        </div>
        <button class="btn btn-primary">Insert</button>
    </form>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(function () {
            $(fileimg).change(function () {
                $(lblimg).html(fileimg.files[0].name);
            })
        })
    </script>

</div>
