
@{
    ViewData["Title"] = "insertImage";
}

<h2>insertImage</h2>

@using BehdadNematiFinalWebProject.Models.ViewModels
@model imageViewModels

<div class="container">
    <form asp-action="insertImage">
        <div class="form-group">
            <input id="fileimg" class="custom-file-input" asp-for="img" />
            <label id="lblimg" class="custom-file-label">Choose product image...</label>
            <span asp-validation-for="img"></span>
        </div>
        <div class="form-group">
            <label asp-for="product_Id"></label>
            <select class="form-control" asp-for="product_Id">
                <option></option>
                @foreach (var item in ViewData["product"] as List<product>)
                {
                    < option value = "@item.Id" > @item.EnglishName </ option >
                }
            </select>
            <span asp-validation-for="product_Id"></span>
        </div>
    </form>
</div>
